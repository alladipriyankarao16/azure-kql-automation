{
  "mode": "Indexed",
  "policyRule": {
    "if": {
      "allOf": [
        {
          "field": "type",
          "equals": "Microsoft.Compute/virtualMachines"
        },
        {
          "field": "Microsoft.Compute/virtualMachines/storageProfile.osDisk.osType",
          "in": [
            "Windows",
            "Linux"
          ]
        }
      ]
    },
    "then": {
      "effect": "[parameters('effect')]",
      "details": {
        "type": "Microsoft.Compute/virtualMachines/extensions",
        "existenceCondition": {
          "allOf": [
            {
              "field": "Microsoft.Compute/virtualMachines/extensions/type",
              "equals": "NessusAgent"
            },
            {
              "field": "Microsoft.Compute/virtualMachines/extensions/publisher",
              "equals": "Tenable"
            },
            {
              "field": "Microsoft.Compute/virtualMachines/extensions/provisioningState",
              "equals": "Succeeded"
            }
          ]
        },
        "deployment": {
          "properties": {
            "mode": "incremental",
            "template": {
              "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
              "contentVersion": "1.0.0.0",
              "parameters": {
                "vmName": {
                  "type": "string"
                },
                "location": {
                  "type": "string"
                },
                "nessusLinkingKey": {
                  "type": "securestring"
                },
                "nessusManagerApp": {
                  "type": "string"
                },
                "nessusManagerHost": {
                  "type": "string"
                },
                "nessusManagerPort": {
                  "type": "string"
                },
                "tenableIoNetwork": {
                  "type": "string"
                }
              },
              "resources": [
                {
                  "type": "Microsoft.Compute/virtualMachines/extensions",
                  "apiVersion": "2021-11-01",
                  "name": "[concat(parameters('vmName'), '/NessusAgent')]",
                  "location": "[parameters('location')]",
                  "properties": {
                    "publisher": "Tenable",
                    "type": "NessusAgent",
                    "typeHandlerVersion": "8.3",
                    "autoUpgradeMinorVersion": true,
                    "settings": {
                      "nessusManagerApp": "[parameters('nessusManagerApp')]",
                      "nessusManagerHost": "[if(equals(parameters('nessusManagerApp'), 'local'), parameters('nessusManagerHost'), '')]",
                      "nessusManagerPort": "[if(equals(parameters('nessusManagerApp'), 'local'), parameters('nessusManagerPort'), '')]",
                      "tenableIoNetwork": "[parameters('tenableIoNetwork')]"
                    },
                    "protectedSettings": {
                      "nessusLinkingKey": "[parameters('nessusLinkingKey')]"
                    }
                  }
                }
              ]
            },
            "parameters": {
              "vmName": {
                "value": "[field('name')]"
              },
              "location": {
                "value": "[field('location')]"
              },
              "nessusLinkingKey": {
                "value": "[parameters('nessusLinkingKey')]"
              },
              "nessusManagerApp": {
                "value": "[parameters('nessusManagerApp')]"
              },
              "nessusManagerHost": {
                "value": "[parameters('nessusManagerHost')]"
              },
              "nessusManagerPort": {
                "value": "[parameters('nessusManagerPort')]"
              },
              "tenableIoNetwork": {
                "value": "[parameters('tenableIoNetwork')]"
              }
            }
          }
        }
      }
    }
  },
  "parameters": {
    "effect": {
      "type": "String",
      "metadata": {
        "displayName": "Effect",
        "description": "Enable or disable the execution of the policy"
      },
      "allowedValues": [
        "DeployIfNotExists",
        "Disabled"
      ],
      "defaultValue": "DeployIfNotExists"
    },
    "nessusLinkingKey": {
      "type": "String",
      "metadata": {
        "displayName": "Nessus Linking Key",
        "description": "The linking key for Nessus agent registration (will be encrypted)"
      }
    },
    "nessusManagerApp": {
      "type": "String",
      "metadata": {
        "displayName": "Nessus Manager Application Type",
        "description": "Use 'cloud' for Tenable.io or 'local' for on-premises Nessus Manager"
      },
      "allowedValues": [
        "cloud",
        "local"
      ],
      "defaultValue": "cloud"
    },
    "nessusManagerHost": {
      "type": "String",
      "metadata": {
        "displayName": "Nessus Manager Host",
        "description": "Hostname or IP of on-premises Nessus Manager (required only if nessusManagerApp is 'local')"
      },
      "defaultValue": ""
    },
    "nessusManagerPort": {
      "type": "String",
      "metadata": {
        "displayName": "Nessus Manager Port",
        "description": "Port for on-premises Nessus Manager (required only if nessusManagerApp is 'local')"
      },
      "defaultValue": "8834"
    },
    "tenableIoNetwork": {
      "type": "String",
      "metadata": {
        "displayName": "Tenable.io Network",
        "description": "Optional network name for Tenable.io (TVM network)"
      },
      "defaultValue": ""
    }
  }
}
