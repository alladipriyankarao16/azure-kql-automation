{
  "mode": "Indexed",
  "policyRule": {
    "if": {
      "allOf": [
        {
          "field": "type",
          "equals": "Microsoft.Compute/virtualMachines"
        },
        {
          "field": "Microsoft.Compute/virtualMachines/storageProfile.osDisk.osType",
          "in": [
            "Windows",
            "Linux"
          ]
        }
      ]
    },
    "then": {
      "effect": "[parameters('effect')]",
      "details": {
        "type": "Microsoft.Compute/virtualMachines/extensions",
        "existenceCondition": {
          "allOf": [
            {
              "field": "Microsoft.Compute/virtualMachines/extensions/type",
              "equals": "NessusAgent"
            },
            {
              "field": "Microsoft.Compute/virtualMachines/extensions/publisher",
              "equals": "Tenable"
            },
            {
              "field": "Microsoft.Compute/virtualMachines/extensions/provisioningState",
              "equals": "Succeeded"
            }
          ]
        },
        "deployment": {
          "properties": {
            "mode": "incremental",
            "template": {
              "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
              "contentVersion": "1.0.0.0",
              "parameters": {
                "vmName": {
                  "type": "string"
                },
                "location": {
                  "type": "string"
                },
                "nessusLinkingKey": {
                  "type": "securestring"
                },
                "nessusAgentGroup": {
                  "type": "string"
                }
              },
              "resources": [
                {
                  "type": "Microsoft.Compute/virtualMachines/extensions",
                  "apiVersion": "2021-11-01",
                  "name": "[concat(parameters('vmName'), '/NessusAgent')]",
                  "location": "[parameters('location')]",
                  "properties": {
                    "publisher": "Tenable",
                    "type": "NessusAgent",
                    "typeHandlerVersion": "8.3",
                    "autoUpgradeMinorVersion": true,
                    "settings": {
                      "nessusManagerApp": "cloud",
                      "nessusAgentGroup": "[parameters('nessusAgentGroup')]"
                    },
                    "protectedSettings": {
                      "nessusLinkingKey": "[parameters('nessusLinkingKey')]"
                    }
                  }
                }
              ]
            },
            "parameters": {
              "vmName": {
                "value": "[field('name')]"
              },
              "location": {
                "value": "[field('location')]"
              },
              "nessusLinkingKey": {
                "value": "[parameters('nessusLinkingKey')]"
              },
              "nessusAgentGroup": {
                "value": "[parameters('nessusAgentGroup')]"
              }
            }
          }
        }
      }
    }
  },
  "parameters": {
    "effect": {
      "type": "String",
      "metadata": {
        "displayName": "Effect",
        "description": "Enable or disable the execution of the policy"
      },
      "allowedValues": [
        "DeployIfNotExists",
        "Disabled"
      ],
      "defaultValue": "DeployIfNotExists"
    },
    "nessusLinkingKey": {
      "type": "String",
      "metadata": {
        "displayName": "Nessus Linking Key",
        "description": "The linking key for Nessus agent registration (will be encrypted)"
      }
    },
    "nessusAgentGroup": {
      "type": "String",
      "metadata": {
        "displayName": "Nessus Agent Group",
        "description": "Agent group name for organizing agents in Tenable"
      },
      "defaultValue": "Azure"
    }
  }
}
